@{
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Admin";

}


<!-- Service Details Section -->
<section id="service-details" class="service-details section">

    <div class="container">

        <div class="row gy-4">

            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="services-list">
                    <a asp-action="Index" asp-controller="Admin">Cập nhật rạp phim</a>
                    <a asp-action="Film" asp-controller="Admin">Cập nhật phim</a>
                    <a asp-action="AddFilm" asp-controller="Admin" class="active">Thêm phim</a>
                </div>

            </div>

            <div class="col-lg-8 services-holder" data-aos="fade-up" data-aos-delay="200">

             
                <div class="services-item" data-aos="fade-up" data-aos-delay="300">
                   
                    <form action="" class="form-edit" method="POST">
                        <div>

                            <label for="Image">Ảnh Phim:</label>
                            <input type="file" accept="image/*,.jpg,.png" id="Image" name="Image" value="~/assets/img/film/tam.jpg">
                            <br><br>
                            <label for="Image">Ảnh Banner:</label>
                            <input type="file" accept="image/*,.jpg,.png" id="file" name="file" value="/assets/img/333.png">
                            <br><br>
                            <label for="status">Trạng thái :</label>
                            <input type="text" id="status" name="status" value="Đang chiếu">
                            <br><br>
                            <label for="name">Tên phim:</label>
                            <input type="text" id="name" name="name" value="Joker">
                            <br><br>
                            <label for="director">Đạo diễn:</label>
                            <input type="text" id="director" name="director" value="Đạo diễn">
                            <br><br>
                            <label for="duration">Thời lượng:</label>
                            <input type="text" id="duration" name="duration" value="95">
                            <br><br>
                            <label for="country">Quốc gia:</label>
                            <input type="text" id="country" name="country" value="Vietnam">
                            <br><br>
                            <label for="description">Mô tả :</label>
                            <input type="file" name="description" id="descriptionfile" accept=".doc,.docx">
                            <br><br>
                        </div>
                        <div>
                            <button type="submit" class="btn-edit">Lưu</button>
                            <button type="submit" class="btn-edit">Làm lại</button>
                        </div>
                    </form>
                </div>
             
            </div>

        </div>

    </div>

</section><!-- /Service Details Section -->
